{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Shared.MessageBus.Kafka": "Debug"
    }
  },
  "AllowedHosts": "*",
  "KafkaConsumerOptions": {
    "UserRegisteredMessage": {
      "GroupId": "users",
      "Topic": "users.registered"
    },
    "EmailConfirmMessage": {
      "GroupId": "users",
      "Topic": "users.emailConfirmRequested"
    },
    "PasswordResetMessage": {
      "GroupId": "users",
      "Topic": "users.passwordResetRequested"
    }
  },
  "KafkaProducerOptions": {
    "Emails": {
      "GroupId": "emails",
      "Topic": "emails.send"
    }
  }
}
